/* pages/about/about.wxss */
.container {
  padding: 60rpx 40rpx;
  background: #f5f7fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo-box {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.4);
}

.logo-icon {
  font-size: 80rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.version {
  font-size: 24rpx;
  color: #999;
  background: #e0e0e0;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.content-section {
  width: 100%;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: justify;
}

.card-subtext {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.feature-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.feature-item {
  font-size: 26rpx;
  color: #555;
  background: #f9f9f9;
  padding: 16rpx;
  border-radius: 12rpx;
  text-align: center;
}