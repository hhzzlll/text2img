/* pages/index/index.wxss */
.container {
  display: block;
  box-sizing: border-box;
  padding: 30rpx;
  background: linear-gradient(to bottom, #f5f7fa 0%, #ffffff 100%);
  min-height: 100vh;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 提示词输入区 */
.prompt-section {
  margin-bottom: 40rpx;
}

.prompt-input {
  width: 100%;
  min-height: 200rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

.prompt-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f2f5;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  border: none;
}

.action-btn::after {
  border: none;
}

/* 标签助手 */
.tags-section {
  margin-bottom: 40rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  padding: 12rpx 24rpx;
  background: #e8f4ff;
  color: #1890ff;
  border-radius: 20rpx;
  font-size: 24rpx;
  transition: all 0.3s;
}

.tag-item:active {
  background: #1890ff;
  color: #ffffff;
  transform: scale(0.95);
}

/* 风格选择 */
.style-section {
  margin-bottom: 40rpx;
  width: 100%;
  overflow: hidden;
  /* 防止溢出 */
}

.style-scroll {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  white-space: nowrap;
}

.style-item {
  flex-shrink: 0;
  /* 防止被压缩 */
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 140rpx;
  padding: 24rpx 0;
  background: #ffffff;
  border-radius: 16rpx;
  margin-right: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.style-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  transform: scale(1.05);
}

.style-icon {
  display: block;
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.style-name {
  display: block;
  font-size: 24rpx;
}

.style-item.active .style-name {
  color: #ffffff;
}

/* 比例选择 */
.ratio-section {
  margin-bottom: 40rpx;
}

.ratio-container {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.ratio-item {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #ffffff;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.ratio-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-weight: bold;
}

/* 生成按钮 */
.generate-section {
  margin: 60rpx 0;
}

.generate-btn {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  border: none;
}

.generate-btn.generating {
  background: linear-gradient(135deg, #888 0%, #666 100%);
  box-shadow: none;
}

.generate-btn::after {
  border: none;
}

/* 结果展示 */
.result-section {
  margin-top: 40rpx;
  padding: 20rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

.result-image {
  width: 100%;
  min-height: 400rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  margin: 10rpx 0;
}

.result-actions {
  display: flex;
  gap: 10rpx;
  margin-top: 24rpx;
}

.result-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  background: #f0f2f5;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #666;
  border: none;
  padding: 0;
  margin: 0;
}

.result-btn::after {
  border: none;
}